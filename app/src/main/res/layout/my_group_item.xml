<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_group_item"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_group_type"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="공부"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:text="그룹 명 어쩌구"
            android:layout_toEndOf="@+id/tv_group_type"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_group_recent_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="그룹 명 어쩌구"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/tv_group_type"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tv_group_name" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/default_more_vert"
        android:background="@android:color/transparent"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:visibility="gone"/>

</androidx.cardview.widget.CardView>